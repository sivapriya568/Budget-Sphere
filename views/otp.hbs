
<div class="container">
  <h1 class="text-center">Verify Your Email</h1>
  {{#if error_msg}}
    <div class="alert alert-danger">{{error_msg}}</div>
  {{/if}}
  <form action="/users/verify-otp" method="POST">
    <div class="form-group">
      <label for="email" style="color: aliceblue;">Email</label>
      <input type="email" id="email" name="email" class="form-control" value="{{email}}" readonly required>
    </div>
    <div class="form-group">
      <label for="otp" style="color: aliceblue;">Enter OTP</label>
      <input type="text" id="otp" name="otp" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-4">Verify OTP</button>
  </form>
</div>

